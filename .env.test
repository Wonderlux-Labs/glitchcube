# Test Environment Configuration
RACK_ENV=test
APP_ENV=test

# Database Configuration - ensures correct test database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=glitchcube_test
# DATABASE_URL can override all above (used by CI)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/glitchcube_test
DB_POOL_SIZE=5

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Test Configuration - VCR handles all external calls
HOME_ASSISTANT_URL=http://glitch.local:8123
HOME_ASSISTANT_TOKEN=test-ha-token

# Test API Keys (can be overridden by CI environment variables)
# OPENROUTER_API_KEY is loaded from .env for recording VCR cassettes
HELICONE_API_KEY=test-helicone-key

# Session secret for tests (must be at least 64 characters)
SESSION_SECRET=test_session_secret_for_specs_only_must_be_at_least_64_characters_long_for_rack_session

# Device configuration for tests
DEVICE_ID=test_cube_001
INSTALLATION_LOCATION=Test Gallery