[Unit]
Description=Glitch Cube Auto Deploy Service
After=network.target docker.service

[Service]
Type=oneshot
User=eric
WorkingDirectory=/home/eric/glitchcube
ExecStart=/home/eric/glitchcube/scripts/auto-deploy.sh
StandardOutput=journal
StandardError=journal

# Restart on failure
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target