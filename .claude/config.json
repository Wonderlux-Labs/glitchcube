{
  "env": {
    "RAILS_ENV": "development",
    "BUNDLE_PATH": "vendor/bundle",
    "DISABLE_SPRING": "false"
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "MultiEdit(**)",
      "Glob(**)",
      "Grep(**)",
      "WebFetch(**)",
      "WebSearch(**)",
      "TodoRead(**)",
      "TodoWrite(**)",
      "Task(**)",
      "ListMcpResourcesTool(**)",
      "ReadMcpResourceTool(**)",
      "mcp__*(**)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf /etc*)",
      "Bash(rm -rf /usr*)",
      "Bash(rm -rf /var*)",
      "Bash(rm -rf /System*)",
      "Bash(rm -rf /Library*)",
      "Bash(rm -rf ~/*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777:*)",
      "Bash(chown root:*)",
      "Bash(RAILS_ENV=production:*)",
      "Bash(rails db:drop:*)",
      "Bash(rake db:drop:*)",
      "Bash(ssh-keygen:*)",
      "Edit(~/.ssh/**)",
      "Write(~/.ssh/**)",
      "Read(~/.ssh/id_*)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      "Edit(/etc/**)",
      "Write(/etc/**)"
    ]
  }
}