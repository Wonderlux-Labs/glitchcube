# Default Environment Configuration for Glitch Cube
# These are sensible defaults that rarely need to be overridden
# Values in .env will override these defaults

# =============================
# Application Defaults
# =============================
# Application port
PORT=4567

# Application version
APP_VERSION=1.0.0

# Default AI model
DEFAULT_AI_MODEL=google/gemini-2.5-flash

# AI conversation parameters
AI_TEMPERATURE=0.8
AI_MAX_TOKENS=200
MAX_SESSION_MESSAGES=10

# =============================
# System Defaults
# =============================
# Timezone
TZ=America/Los_Angeles

# Default personality
DEFAULT_PERSONALITY=buddy

# Device defaults
DEVICE_ID=glitch_cube_001
INSTALLATION_LOCATION=Black Rock City

# =============================
# Service URLs (Development)
# =============================
# These work for local development
REDIS_URL=redis://localhost:6379/0

# Mock Home Assistant for development
MOCK_HOME_ASSISTANT=false
HA_URL=http://glitch.local:8123
# =============================
# Optional Services (Disabled by Default)
# =============================
# Beacon service (leave empty to disable)
BEACON_URL=
BEACON_TOKEN=

# =============================
# OpenRouter API key (required for CI and development)
OPENROUTER_API_KEY=changeme-openrouter-key

# Home Assistant access token (required for CI and development)
HOME_ASSISTANT_TOKEN=changeme-ha-token

# Session secret for app (should be long/random in production)
SESSION_SECRET=changeme-session-secret-that-is-long-enough-for-rack-session-encryption

# =============================
# Self-Healing Error Handler
# =============================
# Self-healing error handler mode
# OFF = Disabled
# DRY_RUN = Analyze and log proposed fixes without applying (default for safety)
# YOLO = Full autonomous mode - applies fixes automatically
SELF_HEALING=DRY_RUN

# Self-healing configuration
SELF_HEALING_MIN_CONFIDENCE=0.85
SELF_HEALING_ERROR_THRESHOLD=2