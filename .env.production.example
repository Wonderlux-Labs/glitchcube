# Production Environment Variables for Glitch Cube

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_production_openrouter_api_key

# Home Assistant Configuration
# Since HA uses host networking, use host.docker.internal
HA_URL=http://host.docker.internal:8123
HA_TOKEN=your_home_assistant_long_lived_access_token

# Redis Configuration (using Docker service name)
REDIS_URL=redis://redis:6379/0

# Application Settings
RACK_ENV=production
PORT=4567

# AI Model Selection
DEFAULT_AI_MODEL=google/gemini-2.5-flash

# Session Secret (generate with: ruby -rsecurerandom -e 'puts SecureRandom.hex(64)')
SESSION_SECRET=generate_a_64_character_hex_string_here

# Master password for all services (Postgres, Portainer, etc)
# Keep it simple for art installation setup
MASTER_PASSWORD=glitchcube123

# Timezone (adjust to installation location)
TZ=America/Chicago

# Logging Level
LOG_LEVEL=info

# Hardware Specific
DEVICE_ID=glitch_cube_001
INSTALLATION_LOCATION=gallery_main

# Database (optional - defaults to SQLite if not set)
# For PostgreSQL: postgres://username:password@localhost/glitchcube
# DATABASE_URL=sqlite://data/glitchcube.db

# PostgreSQL password (uses MASTER_PASSWORD)
# POSTGRES_PASSWORD=${MASTER_PASSWORD}

# Portainer admin password (uses MASTER_PASSWORD)
# PORTAINER_ADMIN_PASSWORD=${MASTER_PASSWORD}

# Beacon Service (optional - for remote tracking)
# BEACON_URL=https://your-tracking-endpoint.com/api/beacon
# BEACON_TOKEN=your_beacon_auth_token